{
  "name": "user-likes-nodejs-api",
  "version": "1.0.0",
  "description": "API in Node Js, Typescript, PostgresSql",
  "main": "build/server.js",
  "scripts": {
    "start": "tsc && node build/server.js",
    "build": "tsc -p .",
    "dev": "nodemon src/server.ts",
    "test": "NODE_ENV=test jest",
    "migrate:dev": "dotenv -e dev.env -- npx prisma migrate dev",
    "docker:dev:up": "npm run build && docker-compose -f docker-compose.yml up && npm run migrate:dev",
    "docker:dev:down": "docker-compose -f docker-compose.yml down",
    "migrate:test:init": "dotenv -e test.env -- npx prisma migrate dev --name postgres-init",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test": "npm run build && npm run docker:test:up && npm run migrate:test:init && jest -i",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gsapkar/user-likes-nodejs-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gsapkar/user-likes-nodejs-api/issues"
  },
  "homepage": "https://github.com/gsapkar/user-likes-nodejs-api#readme",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/joi": "^17.2.3",
    "@types/node": "^15.12.4",
    "@types/pg": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.5",
    "jest-mock-extended": "^1.0.16",
    "prettier": "^2.3.2",
    "prisma": "^2.25.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@prisma/client": "^2.25.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.7"
  },
  "jest": {
    "clearMocks": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
